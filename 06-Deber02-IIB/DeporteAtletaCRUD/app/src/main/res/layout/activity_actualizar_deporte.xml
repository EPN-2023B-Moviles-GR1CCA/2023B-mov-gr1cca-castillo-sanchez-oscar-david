<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarDeporte">
    <EditText
        android:id="@+id/update_deporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ID Deporte"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084" />

    <EditText
        android:id="@+id/update_nombDeporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/update_deporte"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/update_deporte"
        app:layout_constraintTop_toBottomOf="@+id/update_deporte" />

    <EditText
        android:id="@+id/update_fundacionD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Fecha de CreaciÃ³n"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/update_nombDeporte"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/update_nombDeporte"
        app:layout_constraintTop_toBottomOf="@+id/update_nombDeporte" />

    <EditText
        android:id="@+id/update_popularidadD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Popularidad"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/update_fundacionD"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/update_fundacionD"
        app:layout_constraintTop_toBottomOf="@+id/update_fundacionD" />

    <Switch
        android:id="@+id/update_switchProfD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Es Profesional"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/update_popularidadD"
        app:layout_constraintStart_toStartOf="@+id/update_popularidadD"
        app:layout_constraintTop_toBottomOf="@+id/update_popularidadD"
        app:layout_constraintVertical_bias="0.0"
        tools:checked="false" />



    <Button
        android:id="@+id/btn_upd_deporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="ACTUALIZAR DEPORTE"
        app:layout_constraintEnd_toEndOf="@+id/update_switchProfD"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/update_switchProfD"
        app:layout_constraintTop_toBottomOf="@+id/update_switchProfD" />
</androidx.constraintlayout.widget.ConstraintLayout>